#!/usr/bin/env bash
# Build Path: /app/.heroku/php/

# Config
GIT_SOURCE=git://github.com/phalcon/cphalcon.git
PHALCON_DIR=cphalcon
PHALCON_VERSION=phalcon-v2.0.3

# VCS checkout
echo "Building Phalcon..." | indent
git clone $GIT_SOURCE -q

if [ ! -d "$PHALCON_DIR" ]; then
  echo "[ERROR] Failed to find phalconphp directory $phalcon_dir" | indent
  exit
fi

cd $PHALCON_DIR
git checkout $PHALCON_VERSION
cd build

# Build
BUILD_DIR=$1
ln -s $BUILD_DIR/.heroku /app/.heroku
export PATH=/app/.heroku/php/bin:$PATH
bash ./install
